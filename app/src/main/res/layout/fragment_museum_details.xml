<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frg_result"
    android:fillViewport="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/side_nav_bar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imgMusDet"
            android:layout_height="wrap_content"
            android:cropToPadding="false"
            android:layout_marginTop="100dp" />

        <TextView
            android:text="Title Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMusDet"
            android:id="@+id/txtMusTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center" />

        <TextView
            android:text="Opening TImes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMusDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:id="@+id/txtOpeningTimes"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:text="Opening Times Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOpeningTimes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:id="@+id/txtOpeningTimesdet" />

        <TextView
            android:text="Ticket Prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOpeningTimesdet"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:id="@+id/txtTicketPrices"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18sp" />

        <TextView
            android:text="Blahlalalalalalalalallaalalallallaal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:id="@+id/txtMusDesc"
            android:textAlignment="center"
            android:layout_below="@+id/txtMusTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:maxLines="10" />

        <TextView
            android:text="Adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTicketPrices"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:id="@+id/txtAdult" />

        <TextView
            android:text="Youths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAdult"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtYouth" />

        <TextView
            android:text="Seniors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtYouth"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtSenior" />

        <TextView
            android:text="Children"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSenior"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtChildren" />

        <TextView
            android:text="Infants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtInfants"
            android:layout_below="@+id/txtChildren"
            android:layout_alignLeft="@+id/txtChildren"
            android:layout_alignStart="@+id/txtChildren" />

        <Button
            android:text="Find on Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp"
            android:id="@+id/btnMaps"
            android:layout_below="@+id/txtInfants"
            android:layout_alignLeft="@+id/txtTicketPrices"
            android:layout_alignStart="@+id/txtTicketPrices" />
    </RelativeLayout>
</ScrollView>
